<!--    List<Menu> queryMenu(int roleid);-->
    <select id="queryMenu" resultType="menu">
        select
            m.menuid,pid,path,name,title
        from
            role_menu r
        left join
            menu m
        on r.menuid = m.menuid
        where roleid = #{roleid}
    </select>

